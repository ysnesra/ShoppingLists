@model List<Entities.DTOs.ProductListsUsersProductsDto>

@{
    ViewData["Title"] = "ProductList";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.ProductListId nolu Listeye eklemek için Ürünler Listesindesin</h1>
</div>

<table class=" table table-bordered">
    <thead>
        <tr>
            <th>Resmi </th>
            <th>Ürün </th>       
            <th>Açıklaması </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>

                <td>
                    <img src="@product.ImageUrl" width="128" class="img-thumbnail rounded-circle" />
                </td>

                <td>@product.ProductName </td>            
                <td>@product.Description </td>
                <td>
                    <a asp-action="ProductAdd" asp-controller="ProductList" asp-route-productListId="@ViewBag.ProductListId" asp-route-productId="@product.ProductId" class="btn btn-success"><i class="fa-solid fa-cart-plus"></i>  Listeye Ekle</a>


                </td>

            </tr>
        }
    </tbody>
</table>

